<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/edit_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp">
            <ImageView
                android:id="@+id/image"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/edit_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <TextView
            android:id="@+id/title"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="fill_horizontal"
            android:text="ngo van hoa  phan viet trong canh ngo van thanh"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:layout_height="@dimen/_16sdp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:gravity="left"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_2sdp"
                android:maxLines="2"
                android:text="Xếp hạng:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/rate"
                android:textSize="@dimen/_11ssp"
                android:text="2.00"
                android:maxLines="1"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/_4sdp"
                android:gravity="center"
                android:drawableRight="@drawable/round_star_24"
                android:paddingRight="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:id="@+id/vendor"
            android:textSize="@dimen/_10ssp"
            android:text="By: Vendor"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/_4sdp"
            android:gravity="left"
            android:paddingRight="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/price"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Price: 10$"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>